<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF3CA612">
        <Button Content="Hit" Name="p1Hit"  HorizontalAlignment="Left" Margin="168,257,0,0" VerticalAlignment="Top" Width="45" Background="#FF0C0C0D" Foreground="#FFFA0B16"/>
        <Button Content="Stay" Name="p1Stay" HorizontalAlignment="Left" Margin="354,257,0,0" VerticalAlignment="Top" Width="46" Background="#FF0C0C0D" Foreground="#FFFA0B16"/>
        <Button Content="Double" Name="p1Double" HorizontalAlignment="Left" Margin="512,257,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.171,0.623" Background="#FF0C0C0D" Foreground="#FFFA0B16"/>

        <Button Content="Hit" Name="p2Hit" HorizontalAlignment="Left" Margin="168,106,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.846,1.206" Width="45" Background="#FF121213" Foreground="#FFFFEC00"/>
        <Button Content="Stay" Name="p2Stay" HorizontalAlignment="Left" Margin="354,106,0,0" VerticalAlignment="Top" Width="46" Background="#FF121213" Foreground="#FFFFEC00"/>
        <Button Content="Double" Name="p2Double" HorizontalAlignment="Left" Margin="512,106,0,0" VerticalAlignment="Top" Background="#FF121213" Foreground="#FFFFEC00"/>
        <Image HorizontalAlignment="Left" Margin="607,252,0,0" VerticalAlignment="Top" Width="30">
            <Image.Source>
                <BitmapImage UriSource="Resourses/player1/p1checks.png" DecodePixelWidth="30" CreateOptions="IgnoreColorProfile" />
            </Image.Source>
        </Image>
        <Image HorizontalAlignment="Left" Margin="607,101,0,0" VerticalAlignment="Top" Width="30">
            <Image.Source>
                <BitmapImage UriSource="Resourses/player2/p2checks.png" DecodePixelWidth="30" CreateOptions="IgnoreColorProfile" />
            </Image.Source>
        </Image>
        <TextBlock HorizontalAlignment="Left" Margin="654,259,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="Red" Background="#FF3CA612"/>
        <TextBlock HorizontalAlignment="Left" Margin="654,108,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="#FFFBFF00" Background="#FF3CA612"/>
    </Grid>
</Window>
